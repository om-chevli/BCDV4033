pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/om-chevli/BCDV4033.git', branch: 'master'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    dir('Lab1') {
                        sh 'npm install'
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    dir('Lab1') {
                        sh 'npm run build'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    dir('Lab1') {
                        sh 'npm run test'
                    }
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'Lab1/build/**', allowEmptyArchive: true
        }
        failure {
            mail to: 'omchevli@gmail.com',
                 subject: "Build failed Jenkins: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build ${env.BUILD_NAME} failed. Check console output for details."
        }
    }
}